{
  "semi": true,
  "tabWidth": 2,
  "singleQuote": false,
  "trailingComma": "none",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "importOrderGroupNamespaceSpecifiers": true,
  "importOrder": [
    "^react$",
    "^@(/api)(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^[./](.*)$"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": [
        "*.json",
        ".eslintrc"
      ],
      "options": {
        "parser": "json",
        "singleQuote": false
      }
    }
  ]
}